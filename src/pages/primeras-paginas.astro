---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const title = "Primeras páginas - Liderazgo Afectivo";
const description = "Lee las primeras páginas del libro Liderazgo Afectivo, incluyendo el índice, prólogo y prefacio. Un libro sobre liderazgo emocional y gestión de equipos.";
---

<Layout {title} {description}>
	<Header active="primeras-paginas" />
	
	<main class="preview-content">
		<article class="book-preview">
			<h1>Primeras páginas de Liderazgo Afectivo</h1>
			<div class="pdf-viewer-container">
				<iframe 
					src="https://savvily.es/libros/liderazgo-afectivo/muestra-liderazgo-afectivo.pdf"
					width="100%"
					height="700"
					style="border: none; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.08);"
					title="Primeras páginas de Liderazgo Afectivo"
					allowfullscreen
				></iframe>
			</div>
			<div class="cta-container">
				<a href="https://savvily.es/libros/liderazgo-afectivo/" class="buy-button" target="_blank">Comprar libro</a>
			</div>
		</article>
	</main>

	<Footer />
</Layout>

<style>
	h1 {
		margin:0.5rem 0;
		color: #000;
	}
	.preview-content {
		max-width: 100vw;
		margin: 0;
		padding: 0;
	}

	.book-preview {
		background: white;
		padding: 0;
		border-radius: 0;
		box-shadow: none;
		display: flex;
		flex-direction: column;
		align-items: center;
		max-height: 85dvh;
	}

	.pdf-viewer-container {
		margin: 0;
		border-radius: 0;
		overflow: hidden;
		box-shadow: none;
		width: 100vw;
		max-width: 900px;
		display: flex;
		justify-content: center;
	}

	.pdf-viewer-container iframe {
		width: 100%;
		max-width: 900px;
		height: 90vh;
		min-height: 600px;
		display: block;
		margin: 0 auto;
		border-radius: 0;
	}

	.cta-container {
		text-align: center;
		margin: 2rem auto 0 auto;
		width: 100%;
		max-width: 900px;
		display: flex;
		justify-content: center;
	}

	.buy-button {
		display: inline-block;
		padding: 1rem 2rem;
		background-color: #f3d229;
		color: #000;
		text-decoration: none;
		border-radius: 4px;
		font-weight: bold;
		transition: all 0.3s ease;
	}

	.buy-button:hover {
		background-color: #e6c824;
		transform: translateY(-2px);
	}

	@media (max-width: 950px) {
		.pdf-viewer-container,
		.cta-container {
			max-width: 100vw;
		}
		.pdf-viewer-container iframe {
			max-width: 100vw;
		}

		h1 {
			font-size: 1.2rem;
			margin:0 auto;
			text-align: center;
			width: 100%;
		}
	}

	@media (max-width: 768px) {
		.pdf-viewer-container iframe {
			height: 60vh;
			min-height: 300px;
		}

		h1 {
			font-size: 1.2rem;
			margin:0 auto;
			text-align: center;
			width: 100%;
		}
	}
</style> 