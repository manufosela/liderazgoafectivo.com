---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const title = "Contacto - Liderazgo Afectivo";
const description = "Contacta con Manuel Fosela, autor de Liderazgo Afectivo. Consultas sobre el libro, charlas y colaboraciones.";
---

<Layout {title} {description}>
	<Header active="contacto" />
	
	<main class="contact-content">
		<h1>Contacto</h1>
		<p class="contact-description">¿Tienes alguna pregunta sobre el libro, estás interesado en una charla o quieres colaborar? Escríbeme.</p>
		
		<div class="contact-grid">
			<section class="contact-form-section">
				<form id="contactForm" class="contact-form" action="https://formspree.io/f/mrbqjrkv" method="POST">
					<div class="form-group">
						<span class="input-icon">
							<!-- Icono usuario -->
							<svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><circle cx="12" cy="8" r="4" stroke="#bdbdbd" stroke-width="2"/><path d="M4 20c0-2.21 3.582-4 8-4s8 1.79 8 4" stroke="#bdbdbd" stroke-width="2"/></svg>
						</span>
						<label for="name">Nombre</label>
						<input type="text" id="name" name="name" required>
					</div>
					
					<div class="form-group">
						<span class="input-icon">
							<!-- Icono email -->
							<svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><rect x="3" y="5" width="18" height="14" rx="2" stroke="#bdbdbd" stroke-width="2"/><path d="M3 7l9 6 9-6" stroke="#bdbdbd" stroke-width="2"/></svg>
						</span>
						<label for="email">Email</label>
						<input type="email" id="email" name="email" required>
					</div>
					
					<div class="form-group">
						<span class="input-icon">
							<!-- Icono asunto -->
							<svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><rect x="4" y="4" width="16" height="16" rx="4" stroke="#bdbdbd" stroke-width="2"/><path d="M8 12h8" stroke="#bdbdbd" stroke-width="2" stroke-linecap="round"/></svg>
						</span>
						<label for="subject">Asunto</label>
						<input type="text" id="subject" name="subject" required>
					</div>
					
					<div class="form-group">
						<span class="input-icon">
							<!-- Icono mensaje -->
							<svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><rect x="3" y="5" width="18" height="14" rx="2" stroke="#bdbdbd" stroke-width="2"/><path d="M3 7l9 6 9-6" stroke="#bdbdbd" stroke-width="2"/></svg>
						</span>
						<label for="message">Mensaje</label>
						<textarea id="message" name="message" rows="5" required></textarea>
					</div>
					
					<button type="submit" class="submit-button">Enviar mensaje</button>
				</form>
			</section>
			
			<section class="contact-info-box">
				<h2>Otras formas de contacto</h2>
				<div class="social-links">
					<a href="https://twitter.com/manufosela" target="_blank" class="social-link">
						<svg class="social-icon" viewBox="0 0 24 24">
							<path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
						</svg>
						Twitter
					</a>
					
					<a href="https://linkedin.com/in/manufosela" target="_blank" class="social-link">
						<svg class="social-icon" viewBox="0 0 24 24">
							<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
						</svg>
						LinkedIn
					</a>
					
					<a href="https://manufosela.es" target="_blank" class="social-link">
						<svg class="social-icon" viewBox="0 0 24 24">
							<path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm0 22c-5.514 0-10-4.486-10-10S6.486 2 12 2s10 4.486 10 10-4.486 10-10 10z"/>
							<path d="M12 4c-4.411 0-8 3.589-8 8s3.589 8 8 8 8-3.589 8-8-3.589-8-8-8zm0 14c-3.309 0-6-2.691-6-6s2.691-6 6-6 6 2.691 6 6-2.691 6-6 6z"/>
						</svg>
						Web Personal
					</a>
				</div>
			</section>
		</div>
	</main>

	<Footer />
</Layout>

<style>
	.contact-content {
		max-width: 900px;
		margin: 0 auto;
		padding: 2rem 1rem;
	}

	.contact-description {
		text-align: center;
		margin-bottom: 3rem;
		font-size: 1.2rem;
		color: #666;
	}

	.contact-grid {
		display: grid;
		grid-template-columns: 1fr auto;
		gap: 2.5rem;
		align-items: flex-start;
	}

	.contact-form-section {
		min-width: 0;
	}

	.contact-form {
		background: #fff;
		padding: 2.5rem 2rem;
		border-radius: 16px;
		box-shadow: 0 8px 32px rgba(0,0,0,0.12);
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
		max-width: 100%;
	}

	.form-group {
		position: relative;
		margin-bottom: 1.5rem;
	}

	.form-group label {
		display: block;
		margin-bottom: 0.5rem;
		color: #222;
		font-weight: 600;
		letter-spacing: 0.5px;
	}

	.form-group input,
	.form-group textarea {
		width: 100%;
		box-sizing: border-box;
		padding: 1rem 1.2rem 1rem 2.8rem;
		border: 1.5px solid #e0e0e0;
		border-radius: 8px;
		font-size: 1.05rem;
		background: #fafbfc;
		transition: border-color 0.2s, box-shadow 0.2s;
		box-shadow: 0 1px 2px rgba(0,0,0,0.03);
	}

	.form-group input:focus,
	.form-group textarea:focus {
		border-color: #f3d229;
		outline: none;
		box-shadow: 0 0 0 2px #f3d22933;
	}

	.input-icon {
		position: absolute;
		left: 0.9rem;
		top: 50%;
		transform: translateY(-50%);
		width: 20px;
		height: 20px;
		color: #bdbdbd;
		pointer-events: none;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.input-icon svg {
		width: 20px;
		height: 20px;
		display: block;
	}

	.submit-button {
		background: linear-gradient(90deg, #f3d229 0%, #ffe066 100%);
		color: #222;
		padding: 1rem 2.5rem;
		border: none;
		border-radius: 8px;
		font-weight: bold;
		font-size: 1.1rem;
		cursor: pointer;
		box-shadow: 0 2px 8px rgba(243,210,41,0.12);
		transition: background 0.2s, transform 0.2s;
	}

	.submit-button:hover {
		background: linear-gradient(90deg, #ffe066 0%, #f3d229 100%);
		transform: translateY(-2px) scale(1.03);
	}

	.contact-info-box {
		background: #2563eb;
		padding: 2rem 1.2rem;
		border-radius: 16px;
		box-shadow: 0 2px 8px rgba(0,0,0,0.06);
		max-width: 320px;
		width: 100%;
	}

	.contact-info-box h2 {
		color: #fff;
		margin-top: 0;
		margin-bottom: 1.5rem;
		font-size: 1.2rem;
		font-weight: 700;
		letter-spacing: 0.5px;
	}

	.social-links {
		display: flex;
		flex-direction: column;
		gap: 1rem;
		margin-top: 2rem;
		align-items: flex-start;
	}

	.social-link {
		display: flex;
		align-items: center;
		gap: 1rem;
		padding: 0.7rem 1.2rem;
		background: #fff;
		border-radius: 4px;
		text-decoration: none;
		color: #222;
		transition: all 0.3s ease;
		font-weight: 500;
		font-size: 1.05rem;
		box-shadow: 0 1px 2px rgba(0,0,0,0.03);
		width: auto;
		min-width: 0;
		white-space: nowrap;
	}

	.social-link:hover {
		background: #f3d229;
		color: #222;
		transform: translateX(5px);
	}

	.social-icon {
		width: 24px;
		height: 24px;
		min-width: 24px;
		min-height: 24px;
		max-width: 24px;
		max-height: 24px;
		fill: currentColor;
		display: inline-block;
		vertical-align: middle;
	}

	@media (max-width: 900px) {
		.contact-content {
			max-width: 100%;
		}
		.contact-grid {
			grid-template-columns: 1fr;
			gap: 2rem;
		}
		.contact-info-box {
			max-width: 100%;
			margin: 0 auto;
		}
	}
</style> 